                </LinearGradientBrush>
            </Ellipse.Fill>
        </Ellipse>
        <TextBlock HorizontalAlignment="Left" Margin="10,-18,0,0" TextWrapping="Wrap" Text="Photo Page" VerticalAlignment="Top" Width="66" RenderTransformOrigin="0.474,2.308"/>

    </Grid>
