<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:orientation="vertical"
             android:layout_width="fill_parent"
             android:layout_height="fill_parent"
             android:background="#FBCEB1"
>
    <TextView
        android:textColor="#002147"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="DrawingBoard - make your selection by choosing a button"
    />
    <TableRow>

        <Button
            android:text="Draw Path"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/drawPath"
            android:onClick="drawPaths"
        />
        <Button
            android:text="Draw Circle"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/drawCircle"
            android:onClick="drawCirclea"
        />
    </TableRow>
</TableLayout>







